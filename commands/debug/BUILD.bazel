    embed = [":debug"],
    deps = [
        "//arduino/cores/packagemanager",
        "//rpc/commands",
        "//rpc/debug",
        "@com_github_arduino_go_paths_helper//:go-paths-helper",
        "@com_github_stretchr_testify//assert",
